
<% if obj.errors.any? %>
<div class="row" style="margin-left:8.5%">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="card" style="width: 710px;">
      <div class="alert alert-danger" role="alert">
        <h3>
        <%= pluralize(obj.errors.count,"error")%>
          prohibited this article from beign saved:
        </h3>
      </div>
        <div class="card-body">
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></strong></li>
            <% end %> 
          </ul>
        </div>
    </div>
  </div>
</div>
<% end %>