<%= form_for(@article=Article.find(params[:id]),:html=>{class: "form-horizontal",style:'margin-left: 15%;
    padding: 5%;margin-top:-2.5%', role: "form"}) do |f| %>
     <div class="form-group row">
        <div class="col-sm-8" style="margin-left: 7%" align="center">
            <%= hidden_field_tag(:title, @article.title) %>
            <%= hidden_field_tag(:description, @article.description) %>
            <%= hidden_field_tag(:likes,"1") %>


                <%= f.submit "Like",class:"btn btn-primary btn-lg",style:'width:50%'%>
        </div>
    </div>
    <% end %>
