<%= render 'shared/errors',:obj=>@article%>
<br>
<div class='container'>
  <div class="col-xs-12">

  <%= form_for(@article,:html=>{class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
      <%= f.label :title,class: "control-label col-xs-2 col-form-label ",style:'width:77px'%>
      <div class="col-sm-8">
         <%= f.text_field :title,class:"form-control",placeholder:"Title of article",autofocus: true %>
      </div>
  </div>
    <div class="form-group row">
      <%= f.label :description ,class:"control-label cols-xs-2 col-form-label "%>
      <br>
      <div class="col-sm-8">
            <%= f.text_area :description,class:"form-control",rows:10,style:'white-space:pre;white-space:pre-wrap;'%>
      </div>
    </div>
      
    <div class="form-group row">
      <div class="col-sm-8">
              <%= f.submit class:"btn btn-primary btn-lg"%>
      </div>
    </div>
  <% end %>
  <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to 'Cancel request and back to articles listing' , articles_path%> ]
  </div>
  </div>
</div>
