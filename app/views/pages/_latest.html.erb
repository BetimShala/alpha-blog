<hr class="md-4">
<h1>Latest Articles</h1>
<hr class="md-4">
<% articles.each do |article| %>
  <div class="row-2">
    <div class="col-xs-8 col-xs-offset-2" style="margin-top: 20px;">
      <div class="card card-body bg-light">
          <!-- title -->
           <h4 class="center card-title" style="color: black">
             <%= link_to article.title,article_path(article) %>
           </h4>

          <!-- ####### -->

          <!-- body -->
         <p class="card-text" style="color:black;border-bottom: 1px solid #eaeaea;
  padding-top: 5px;">
           <%= truncate(article.description,length:210)%> &nbsp;
           <%= link_to 'Read more',article_path(article)%>
         </p> 
          <!-- ####### -->

          <!-- actions -->
            <div class="row-2">
              <small style="float:left;color: grey;">
            <%= time_ago_in_words(article.updated_at)%> ago
            </small>
            <small style="float:right;color: grey;">Created by:
            <%= link_to article.user.username,user_path(article.user),style:'color:grey' %>
            </small>
            </div>
          <!-- ####### -->
      </div>
    </div>
  </div>
    
<% end %>
