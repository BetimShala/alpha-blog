
<h1>Latest Articles</h1>
<% articles.each do |article| %>
  <div class="row-2">
    <div class="col-xs-8 col-xs-offset-2" style="margin-top: 20px;">
      <div class="card card-body bg-light">
          <!-- title -->
           <h4 class="center card-title" style="color: black">
             <%= link_to article.title,article_path(article) %>
           </h4>

          <!-- ####### -->

          <!-- body -->
         <p class="card-text" style="color:black;border-bottom: 1px solid #eaeaea;
  padding-top: 5px;">
           <%= truncate(article.description,length:210)%> &nbsp;
           <%= link_to 'Read more',article_path(article)%>
         </p> 
          <!-- ####### -->

          <!-- actions -->
            <p style="float:right;color: grey;">
            <%= article.updated_at.strftime("%F %T") %>
            </p>
          <!-- ####### -->
      </div>
    </div>
  </div>
    
<% end %>
