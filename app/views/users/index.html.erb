<h1 align="center">All Alpha Bloggers</h1>
<hr class="md-4">

<div align="center">

  <% @users.each do |user| %>

    <ul class="listing">

      <div class="row-2">
        <div class="card border-info mb-3" style="max-width: 50rem;">
          <div class="card card-body text-info">

            <li><%= link_to gravatar_for(user),user_path(user) %></li>

            <li class="article-title">
              <h4 class="card-title"> <%= link_to user.username, user_path(user),style:'color:black' %></h4>
            </li>

            <p class="card-text" style="color:grey"><%= user.short_bio%></p>
            <%#binding.pry%>
            

          </div>
           <div class="card-footer text-muted">
                <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
                <% if logged_in? and current_user.admin? %>
                <li><%= link_to "Delete this user",user_path(user),method: :delete,class: "btn btn-danger btn-sm",:data=>{confirm: "Are you sure you want to delete this user"}%></li>
                <% end %>
            </div>

      </div>
      </div>
    </ul>

<% end %>
<%= will_paginate %>
</div>
