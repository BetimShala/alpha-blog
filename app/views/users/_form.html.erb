<%= render 'shared/errors',:obj=>@user%>
<br>
<div class='container'>
  <div class="col-xs-12">

  <%= form_for(@user,:html=>{class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
      <%= f.label :username,class: "control-label col-xs-2 col-form-label ",style:'width:77px'%>
      <div class="col-sm-8">
         <%= f.text_field :username,class:"form-control",placeholder:"Username",autofocus: true %>
      </div>
  </div>
    <div class="form-group row">
      <%= f.label :Email ,class:"control-label cols-xs-2 col-form-label "%>
      <div class="col-sm-8" style="margin-left: 3.5%">
            <%= f.email_field :email,class:"form-control",placeholder: "Email Address"%>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :Password ,class:"control-label cols-xs-2 col-form-label "%>
      <div class="col-sm-8" style="margin-left: 1.1%">
            <%= f.password_field :password,class:"form-control",placeholder: 'Your Password'%>
      </div>
    </div>

    
    </div>
      
    <div class="form-group row">
      <div class="col-sm-8" style="margin-left: 7%">
              <%= f.submit(@user.new_record? ? 'Sign up' : 'Update account', class:"btn btn-primary btn-lg")%>
      </div>
    </div>
  <% end %>
  <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to 'Cancel request and back to articles listing' , articles_path%> ]
  </div>
  </div>
