<br>
<h1 align="center">Log in form</h1>

 <%= form_for(:session,:html=>{class: "form-horizontal",style:'margin-left: 15%;
    padding: 5%;margin-top:-2.5%', role: "form"},url: login_path) do |f| %>
    
    <div class="form-group row">
        <%= f.label :Email ,class:"control-label cols-xs-2 col-form-label "%>
        <div class="col-sm-8" style="margin-left: 3.5%">
              <%= f.email_field :email,class:"form-control",placeholder: "Enter email"%>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :Password ,class:"control-label cols-xs-2 col-form-label "%>
        <div class="col-sm-8" >
              <%= f.password_field :password,class:"form-control",placeholder: 'Your Password'%>
        </div>
    </div>

           
    <div class="form-group row">
        <div class="col-sm-8" style="margin-left: 7%" align="center">
       <p> [ <%= link_to 'Create an account' , signup_path%> ]</p>
                <%= f.submit "Log in",class:"btn btn-primary btn-lg",style:'width:50%'%>
        </div>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4" align="center" style="margin-left: 0%;">
      [ <%= link_to 'Cancel request and back to articles listing' , articles_path%> ]
    </div>